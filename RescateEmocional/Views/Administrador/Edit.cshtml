@model RescateEmocional.Models.Administrador

@{
    ViewData["Title"] = "Editar";
}

<div class="container mt-5">
    <div class="card shadow-lg border-primary">
        <div class="card-header bg-primary text-white">
            <h2 class="display-5 mb-0"><i class="bi bi-pencil-square me-2"></i>Editar administrador</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Idadmin" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Nombre" class="form-control" placeholder=" " />
                            <label asp-for="Nombre" class="form-label"></label>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="CorreoElectronico" class="form-control" placeholder=" " />
                            <label asp-for="CorreoElectronico" class="form-label"></label>
                            <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Contrasena" type="password" class="form-control" placeholder=" " />
                            <label asp-for="Contrasena" class="form-label"></label>
                            <span asp-validation-for="Contrasena" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Idrol" class="form-select">
                                <option value="1" selected>Administrador</option>
                            </select>
                            <label asp-for="Idrol" class="form-label"></label>
                            <span asp-validation-for="Idrol" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
