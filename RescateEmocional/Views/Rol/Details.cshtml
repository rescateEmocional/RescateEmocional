@model RescateEmocional.Models.Rol

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-5">
    <div class="card shadow-lg border-primary">
        <div class="card-header bg-primary text-white">
            <h2 class="display-5 mb-0"><i class="bi bi-shield-lock me-2"></i>Detalles del rol</h2>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-8 mx-auto">
                    <dl class="row border rounded-3 p-3 bg-light">
                        <div class="col-12 mb-4">
                            <dt class="text-muted small">@Html.DisplayNameFor(model => model.Nombre)</dt>
                            <dd class="h4 text-primary">@Html.DisplayFor(model => model.Nombre)</dd>
                        </div>

                        <div class="col-12 mb-4">
                            <dt class="text-muted small">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                            <dd class="fw-bold">@Html.DisplayFor(model => model.Descripcion)</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Idrol" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>
