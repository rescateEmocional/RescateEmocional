@model RescateEmocional.Models.Diario

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="display-5 mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Eliminar entrada de diario</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading"><i class="bi bi-exclamation-octagon-fill"></i> ¡Acción irreversible!</h4>
                <p class="mb-0">¿Deseas eliminar permanentemente esta entrada de diario?</p>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-md-8 mx-auto">
                    <dl class="row border rounded-3 p-3 bg-light">
                        <div class="col-8 mb-3">
                            <dt class="text-muted small">@Html.DisplayNameFor(model => model.Titulo)</dt>
                            <dd class="h5">@Html.DisplayFor(model => model.Titulo)</dd>
                        </div>

                        <div class="col-md-6 mb-3">
                            <dt class="text-muted small">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
                            <dd class="fw-bold">@Html.DisplayFor(model => model.FechaCreacion)</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Iddiario" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash3 me-2"></i>Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>