@model RescateEmocional.Models.Diario

@{
    ViewData["Title"] = "Crear";
}
@* Mostrar errores generales *@
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="display-5 mb-0"><i class="bi bi-journal-text me-2"></i>Crear entrada de diario</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-4">
                    <div class="col-md-10">
                        <div class="form-floating">
                            <input asp-for="Titulo" class="form-control" placeholder=" " />
                            <label asp-for="Titulo" class="form-label"></label>
                            <span asp-validation-for="Titulo" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-10">
                        <div class="form-floating">
                            <textarea asp-for="Contenido" class="form-control" placeholder=" " style="height: 150px;"></textarea>
                            <label asp-for="Contenido" class="form-label"></label>
                            <span asp-validation-for="Contenido" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-10">
                        <div class="form-floating">
                            <input asp-for="FechaCreacion" type="date" class="form-control" placeholder=" " />
                            <label asp-for="FechaCreacion" class="form-label"></label>
                            <span asp-validation-for="FechaCreacion" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}