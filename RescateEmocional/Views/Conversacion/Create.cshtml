@model RescateEmocional.Models.Conversacion

@{
    ViewData["Title"] = "Create";
    string userRole = ViewData["UserRole"]?.ToString() ?? "Desconocido";
    int authenticatedUserId = ViewData["AuthenticatedUserId"] != null ? (int)ViewData["AuthenticatedUserId"] : 0;
    int authenticatedOrgId = ViewData["AuthenticatedOrgId"] != null ? (int)ViewData["AuthenticatedOrgId"] : 0;
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Crear Nueva Conversación</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-4">Conversación</h4>
            <hr class="mb-4">

            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Seleccionar el usuario al que se enviará el mensaje -->
                <div class="form-group mb-3">
                    <label asp-for="Idusuario" class="form-label fw-bold">Seleccionar Usuario</label>
                    <select asp-for="Idusuario" class="form-select" asp-items="ViewBag.Idusuario" required>
                        <option value="">Seleccione un usuario</option>
                    </select>
                    <div class="invalid-feedback">Por favor seleccione un usuario</div>
                </div>

                <!-- Seleccionar la organización (solo si el usuario es un Usuario) -->
                @if (userRole == "Usuario")
                {
                    <div class="form-group mb-3">
                        <label asp-for="Idorganizacion" class="form-label fw-bold">Seleccionar Organización</label>
                        <select asp-for="Idorganizacion" class="form-select" asp-items="ViewBag.Idorganizacion" required>
                            <option value="">Seleccione una organización</option>
                        </select>
                        <div class="invalid-feedback">Por favor seleccione una organización</div>
                    </div>

                    <!-- Guardar automáticamente el ID del usuario autenticado -->
                    <input type="hidden" asp-for="Idusuario" value="@authenticatedUserId" />
                }
                else if (userRole == "Organizacion")
                {
                    <!-- Guardar automáticamente el ID de la organización autenticada -->
                    <input type="hidden" asp-for="Idorganizacion" value="@authenticatedOrgId" />
                }

                <div class="form-group mb-3">
                    <label asp-for="FechaInicio" class="form-label fw-bold"></label>
                    <input asp-for="FechaInicio" class="form-control" type="datetime-local" required />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor ingrese una fecha válida</div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Mensaje" class="form-label fw-bold"></label>
                    <textarea asp-for="Mensaje" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor ingrese un mensaje</div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                    <input type="submit" value="Enviar" class="btn btn-primary px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
