@model RescateEmocional.Models.Conversacion

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Crear Nueva Conversación</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-4">Conversación</h4>
            <hr class="mb-4">

            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Idusuario" class="form-label fw-bold"></label>
                    <select asp-for="Idusuario" class="form-select" asp-items="ViewBag.Idusuario" required>
                        <option value="">Seleccione un usuario</option>
                    </select>
                    <div class="invalid-feedback">Por favor seleccione un usuario</div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Idorganizacion" class="form-label fw-bold"></label>
                    <select asp-for="Idorganizacion" class="form-select" asp-items="ViewBag.Idorganizacion" required>
                        <option value="">Seleccione una organización</option>
                    </select>
                    <div class="invalid-feedback">Por favor seleccione una organización</div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaInicio" class="form-label fw-bold"></label>
                    <input asp-for="FechaInicio" class="form-control" type="datetime-local" required />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor ingrese una fecha válida</div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Mensaje" class="form-label fw-bold"></label>
                    <textarea asp-for="Mensaje" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor ingrese un mensaje</div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                    <input type="submit" value="Crear" class="btn btn-primary px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        color: #333;
    }

    .form-control, .form-select {
        border-radius: 5px;
        padding: 0.5rem 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-outline-secondary {
        border-radius: 5px;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}