@model RescateEmocional.Models.Conversacion

@{
    ViewData["Title"] = "Create";
    var esOrganizacion = ViewBag.EsOrganizacion as bool? ?? false;
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Crear Nueva Conversación</h1>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
            <h4 class="card-title text-secondary mb-3">Detalles de la Conversación</h4>
            <hr class="mb-4">

            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                @if (esOrganizacion)
                {
                    <div class="mb-3">
                        <label asp-for="Idusuario" class="form-label fw-semibold text-dark">Usuario</label>
                        <select asp-for="Idusuario" class="form-select" asp-items="ViewBag.Idusuario" required>
                            <option value="">Seleccione un usuario</option>
                        </select>
                        <div class="invalid-feedback">Por favor seleccione un usuario</div>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <label asp-for="Idorganizacion" class="form-label fw-semibold text-dark">Organización</label>
                        <select asp-for="Idorganizacion" class="form-select" asp-items="ViewBag.Idorganizacion" required>
                            <option value="">Seleccione una organización</option>
                        </select>
                        <div class="invalid-feedback">Por favor seleccione una organización</div>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="FechaInicio" class="form-label fw-semibold text-dark">Fecha de Inicio</label>
                    <input asp-for="FechaInicio" class="form-control" type="datetime-local" required />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor ingrese una fecha válida</div>
                </div>

                <div class="mb-4">
                    <label asp-for="Mensaje" class="form-label fw-semibold text-dark">Mensaje</label>
                    <textarea asp-for="Mensaje" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor ingrese un mensaje</div>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-3">Volver</a>
                    <button type="submit" class="btn btn-primary px-4">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 700px;
    }

    .card {
        background: #f8f9fa;
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.75rem;
        border: 1px solid #ced4da;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

    .btn-outline-secondary {
        border-radius: 8px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
