@model RescateEmocional.Models.Conversacion

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Detalles de la Conversación</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Información</h4>
            <hr class="mb-4">

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaInicio)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Mensaje)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Mensaje)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IdorganizacionNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdorganizacionNavigation.Idorganizacion)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IdusuarioNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdusuarioNavigation.Idusuario)
                </dd>
            </dl>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.Idconversacion" class="btn btn-primary px-4">Editar</a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-body {
        padding: 2rem;
    }

    .fw-bold {
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-outline-secondary {
        border-radius: 5px;
    }

    dt {
        padding-top: 0.5rem;
    }

    dd {
        padding-top: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .gap-2 {
        gap: 0.5rem;
    }
</style>