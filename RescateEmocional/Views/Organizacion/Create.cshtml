@model RescateEmocional.Models.Organizacion
@* Define el modelo que se utilizará en esta vista: Organizacion del namespace RescateEmocional.Models *@
@{
    ViewData["Title"] = "Crear Organización";
    @* Establece el título de la vista en el ViewData *@
}

<div class="container mt-5">
    @* Contenedor principal de Bootstrap con margen superior de 5 unidades *@
    <div class="card shadow-lg">
        @* Tarjeta de Bootstrap con sombra grande para efecto visual *@
        <div class="card-header bg-primary text-white">
            @* Encabezado de la tarjeta con fondo azul y texto blanco *@
            <h2 class="display-5 mb-0"><i class="bi bi-building me-2"></i>@ViewData["Title"]</h2>
            @* Título con ícono de edificio y texto del ViewData *@
        </div>
        <div class="card-body">
            @* Cuerpo de la tarjeta que contiene el formulario *@
            <form asp-action="Create" class="needs-validation" novalidate>
                @* Formulario enviado a la acción Create con validación de Bootstrap *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                @* Resumen de errores de validación en un alerta rojo *@

                <div class="row g-4">
                    @* Fila de Bootstrap con espaciado entre columnas *@
                    <div class="col-md-6">
                        @* Columna de 6 unidades para el campo Nombre *@
                        <div class="form-floating">
                            <input asp-for="Nombre" class="form-control" placeholder=" " />
                            @* Campo de entrada para Nombre con estilo de Bootstrap *@
                            <label asp-for="Nombre" class="form-label"></label>
                            @* Etiqueta flotante para Nombre *@
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                            @* Mensaje de validación para Nombre *@
                        </div>
                    </div>

                    <div class="col-md-6">
                        @* Columna de 6 unidades para el campo Horario *@
                        <div class="form-floating">
                            <input asp-for="Horario" class="form-control" placeholder=" " />
                            <label asp-for="Horario" class="form-label"></label>
                            <span asp-validation-for="Horario" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        @* Columna de ancho completo para Descripcion *@
                        <div class="form-floating">
                            <input asp-for="Descripcion" class="form-control" placeholder=" " />
                            <label asp-for="Descripcion" class="form-label"></label>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        @* Columna para Ubicacion *@
                        <div class="form-floating">
                            <input asp-for="Ubicacion" class="form-control" placeholder=" " />
                            <label asp-for="Ubicacion" class="form-label"></label>
                            <span asp-validation-for="Ubicacion" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        @* Columna para Estado *@
                        <div class="form-floating">
                            <input asp-for="Estado" class="form-control" placeholder=" " />
                            <label asp-for="Estado" class="form-label"></label>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="CorreoElectronico" type="email" class="form-control" placeholder=" " required />
                            <label asp-for="CorreoElectronico" class="form-label"></label>
                            <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Contrasena" type="password" class="form-control" placeholder=" " required />
                            <label asp-for="Contrasena" class="form-label"></label>
                            <span asp-validation-for="Contrasena" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        @* Columna para el menú desplegable Idrol *@
                        <div class="form-floating">
                            <select asp-for="Idrol" class="form-select">
                                <option value="2" selected>Organización</option>
                                @* Solo se muestra el rol 2 (Organización) como predeterminado y seleccionado *@
                            </select>
                            <label asp-for="Idrol" class="form-label"></label>
                            <span asp-validation-for="Idrol" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    @* Contenedor de botones con margen superior y alineación a los extremos *@
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        @* Botón de enlace para volver al listado *@
                        <i class="bi bi-arrow-left-circle me-2"></i>Volver al listado
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        @* Botón de envío del formulario *@
                        <i class="bi bi-save me-2"></i>Guardar Organización
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @* Sección para scripts adicionales *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        @* Incluye scripts de validación del lado del cliente *@
    }
}